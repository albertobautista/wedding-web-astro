---
import Icon from "./Icon.astro";
import Leaf from "./icons/Leaf.astro";
---

<div class="py-20 mx-auto text-center date-area">
  <h2 class="text-[60px] font-atomic">22 de Febrero de 2025</h2>
  <Icon>
    <Leaf class="w-7 h-7 fill-primary" />
  </Icon>
</div>

<style>
  .date-area {
    position: relative;
    z-index: 1;
  }
  .date-area:after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: -1;
    opacity: 0.8;
    background: url("../../public/img/bg-circles.png");
  }
</style>
